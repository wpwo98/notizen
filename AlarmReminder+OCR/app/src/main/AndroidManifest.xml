<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SoftwareDesign.Notizen">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/notizen_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.SoftwareDesign.Notizen.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.SoftwareDesign.Notizen.AddReminderActivity"
            android:label="@string/title_activity_add_reminder"
            android:parentActivityName="com.SoftwareDesign.Notizen.MainActivity"
            android:theme="@style/AppTheme">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.SoftwareDesign.Notizen.MainActivity" />
        </activity>
        <activity android:name="com.SoftwareDesign.Notizen.SendSMS" />
        <activity android:name="com.SoftwareDesign.Notizen.ocr" />

        <provider
            android:name="com.SoftwareDesign.Notizen.data.AlarmReminderProvider"
            android:authorities="com.SoftwareDesign.Notizen"
            android:exported="false" />

        <service
            android:name="com.SoftwareDesign.Notizen.reminder.ReminderAlarmService"
            android:exported="false" />
    </application>

</manifest>